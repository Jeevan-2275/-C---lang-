#include <stdio.h>
void checkEligibility(int age) {
    if (age >= 18) {
        printf("You are eligible to vote.");
    } else {
        printf("You are not eligible to vote. You must be 18 years old or older.");
    }
}

int main() {
    int age;
    printf("Enter your age: ");
    scanf("%d", &age);
    checkEligibility(age);
    return 0;
}

